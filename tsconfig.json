{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext", "dom", "dom.iterable"],
        "types": ["node"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "paths": {
            "jotai-reloadable": ["./src/reloadable.ts"],
            "jotai-reloadable/simple": ["src/simple/index.ts"]
        }
    },
    "include": ["./src"],
    "exclude": ["./node_modules", "./sample", "./dist"]
}
