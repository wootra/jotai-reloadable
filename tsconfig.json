{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext"],
        "types": ["node"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "sourceMap": false,
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "declaration": true,
        "outDir": "dist",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "sample", "dist"]
}
