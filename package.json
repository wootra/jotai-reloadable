{
    "name": "jotai-reloadable",
    "version": "1.1.0",
    "description": "this allows jotai/utils/loadable reloadable. you should install jotai to use this module. ",
    "main": "dist/reloadable.js",
    "scripts": {
        "test": "jest",
        "clear1": "rm -rf $CURRPATH/sample/node_modules; rm $CURRPATH/sample/pnpm-lock.yaml; cd $CURRPATH/sample; pnpm install",
        "clear2": "rm -rf $CURRPATH/sampleJotaiV1/node_modules; rm $CURRPATH/sampleJotaiV1/pnpm-lock.yaml; cd $CURRPATH/sampleJotaiV1; pnpm install",
        "build": "rm -rf ./dist; tsc; CURRPATH=$(pwd) pnpm run clear1 ; CURRPATH=$(pwd) pnpm run clear2"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/wootra/jotai-reloadable.git"
    },
    "keywords": [
        "jotai",
        "loadable",
        "reloadable",
        "jotai-reloadable"
    ],
    "author": "Songhyeon Jun (shjeon0730@gmail.com)",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/wootra/jotai-reloadable/issues"
    },
    "homepage": "https://github.com/wootra/jotai-reloadable#readme",
    "peerDependencies": {
        "jotai": ">= 1.12.1 < 3",
        "react": ">=17.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        }
    },
    "devDependencies": {
        "@types/react": "^18.0.28",
        "typescript": "^4.9.5"
    }
}
